package javazoom.io;

import java.util.Scanner;

public class AdventureGame {
	
	static float hälsa = 100;
	int pengar = 10;
	String förnamn= ""; //Klar
	String efternamn=""; //Klar
	String spelarnamn=""; // Klar
	String ålder; // Klar
	int sträcka = 0;
	static int posX=0;
	static int posY=0;
	
	static int prob(){
		return (int)(Math.random()*100);
	}
	static int prob(int max){
		return (int)(Math.random()*max);
	}
	
  
	




public static void main(String[]args){
	Scanner in = new Scanner(System.in);
    //oresentera spelet
	System.out.println("Ett äventyrsel!");
	System.out.println("Du kommer dö och hata Tobbe, grundaren av spelet");
	//läs in spelarens namn o karaktärsnamn
	//börja spelet
	
	Name namn= new Name();
	
	
	String Komando="Exit";
	System.out.print("Vad ska vi göra?");
	Komando = in.nextLine();
	//Håll på så länge det masika ordet INTE är korrekt/inmatat
	while (!(Komando.equals("Exit")  )  )
	{
		//här hanteras sakern som skall göras och hända?
		System.out.print("Vad ska vi göra?");
		Komando = in.nextLine();
		if(Komando.equalsIgnoreCase("N")){
			System.out.println("Norrut!");
			posY =+1;
			}
			if(Komando.equalsIgnoreCase("S")){
			System.out.println("Söderut!");
			posY -=1;
			}
			if(Komando.equalsIgnoreCase("Ö")||
					Komando.equalsIgnoreCase("O")|| 
					Komando.equalsIgnoreCase("E")){
			        System.out.println("Österut!");
			        posX +=1;
			}
			if(Komando.equalsIgnoreCase("V") || Komando.equalsIgnoreCase("W")){
			System.out.println("Västerut!");
			posX -=1;
			}
			//hälsa -=0.1;
			
			int vadSkaHända = prob();
          if (vadSkaHända == 0 ) { // Sannolikhet 1% för monster
			 //Moonster
			
	 }
			 else if (vadSkaHända <= 10) { // sannolikhet 10 % för NPC
			//NPC
	}
			 else if (vadSkaHända <=15) { // Sannolikhet 5 % för pengar
	       //pengar
	}
			else if (vadSkaHända <=18){ // Sannolikhet 3 % för grop 
			//gropar
    }
			System.out.println("Du är på ("+posX+","+posY+") och har hälsa:" +hälsa);

			System.out.print("Vad ska vi göra? ");
			Komando = in.nextLine();	
	}
	System.out.print("HejdÅ bitch");
	in.close();
	}
}