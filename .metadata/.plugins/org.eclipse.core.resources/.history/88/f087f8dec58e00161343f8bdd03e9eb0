import javax.swing.*;
import java.awt.*;

public class Grafik extends JPanel {
	
	private int width = 100;
	private int height = 100;
	private int d = 50; //diameter
	private int x = 0;
	private int y = 0;
	private int moveX = 1;
	private int moveY = 1;
	
	private void moveBall(){ //makes the ball move in a certain speed
		if(x =moveX < 0)
			moveX = 1;
		if(x + moveX > getWidth())
			
		x += 1;
		y += 1;
	}
	
	public void paint(Graphics g){
		super.paint(g);
		Graphics2D g2d = (Graphics2D) g;
		g2d.setRenderingHint(RenderingHints.KEY_ANTIALIASING, RenderingHints.VALUE_ANTIALIAS_ON);
		g2d.fillOval(x, y, width, height);
	}
		
	public static void main(String[] args) {
		JFrame frame = new JFrame();
		Grafik grafik = new Grafik();
		
		frame.setSize(900, 750); //x, y
		frame.setLocation(300, 75); //x, Y
		frame.setDefaultCloseOperation(3);
		frame.add(grafik);
		frame.setTitle("Grafisk projekt");
		frame.setResizable(false); //ändra storlek på rutan eller ej
		frame.setVisible(true); //rutan visas
		
		while(true){
			grafik.moveBall();
			grafik.repaint();
			try { 
				Thread.sleep(10); //skiftar emellan trådarna så att flera saker kan köra samtidigt, gör så att bollen rör sig
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}	
}
